.ui-toast-content{ width: 600rpx; height: 300rpx;position: fixed; top: 50%; left: 50%; margin-top: -150rpx; margin-left: -300rpx; background: #fff; border-radius: 10rpx;}
.cell-title{font-size: 30rpx; text-align: center; margin-top: 30rpx;}
.cell-content{ font-size: 26rpx; color: #999; text-align: center; margin-top: 20rpx;}
.ui-toast-content button{position: absolute; bottom: 0;left: 0; width: 100%; color: #00FF00;}
.ui-toast-box{position: fixed;top: 0;left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);z-index: 99;}


.swiperClass {
margin: 0;
margin-top: 150rpx;
height: 748rpx;
}
 
.slide-image {
width: 420rpx;
height: 100%;
/* border-radius: 10px; */
position: relative;
}
 
image.active {
transform: none;
transition: all 0.2s ease-in 0s;
}
 
image.quiet {
transform: scale(0.8333333);
transition: all 0.2s ease-in 0s;
}
swiper-item{ text-align: center;}
button::after{
    border:none;
}
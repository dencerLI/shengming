.inbot{ position: fixed; bottom: 0; right: 0; width: 100%; height:257rpx;border-top-left-radius: 50rpx; border-top-right-radius: 50rpx;z-index: 2; background: #fff; }
.bglogo{position: fixed; top: 0; left: 0; width: 100%; background: #333;}
.wxfx{ float: left; text-align: center; margin-left: 90rpx; margin-top: 70rpx; position: relative;}
.wxfx button{ position: absolute; top: 0;left: 0; width: 100%;height: 100%; background: rgba(0, 0, 0, 0); border: none;}
.wxfx image{ width: 88rpx; height: 88rpx; }
.wxfx text{display: block;font-size: 26rpx; height: 26rpx;line-height: 26rpx; margin-top: 15rpx; color: #000000;}
.wxfx1{ float: right; text-align: center; margin-right: 90rpx; margin-top: 70rpx;}
.wxfx1 image{ width: 88rpx; height: 88rpx;}

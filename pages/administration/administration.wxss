/* 修改默认样式 */
checkbox{
  width: 26rpx; /* 背景的宽 */
  height: 30rpx; /* 背景的高 */

}
checkbox .wx-checkbox-input,radio .wx-radio-input {
  border-radius:50%; /* 圆角 */
  width: 26rpx; /* 背景的宽 */
  height: 26rpx; /* 背景的高 */
  background: #fff;
   box-sizing: border-box;
}


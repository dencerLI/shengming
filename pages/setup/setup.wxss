/* pages/setup/setup.wxss */
.top{ height: 326rpx; width: 100%; border-bottom:1px solid #e5e5e5; }
.top image{ display: block; margin: 0px auto; border: 1px solid #333; width: 120rpx; height: 120rpx; border-radius: 50%; margin-top: 72rpx;}
.top text{ text-align: center; width: 100%; display: block; font-size: 30rpx; color: #333333; margin-top: 40rpx;}
.sessionlist{ height: 80rpx; border-bottom: 1px solid #e5e5e5; box-sizing: border-box;}
.name{ float: left; width: 235rpx; font-size: 26rpx; color: #333; height: 80rpx; line-height: 80rpx; text-indent: 30rpx;}
.sessionlist input{ width: 265rpx; float: left; height: 80rpx; font-size: 26rpx; color: #999999; }
.bot{ position: absolute;bottom: 0; right: 0; width: 100%; height: 100rpx; background: #000; color: #FEFEFE;font-size: 30rpx; text-align: center; line-height: 100rpx;}
.sessionlist image{ float: right; width: 60rpx; height: 60rpx; margin-top: 10rpx; margin-right: 15rpx;}
.option_box{ width: 100%;height: auto; overflow: hidden; position: absolute;top: 80rpx; background: #fff;}
.addlist{ float: left; position: relative; height: 80rpx;}
.option{ height: 60rpx;line-height: 60rpx; font-size: 26rpx; display: block; width: 100%; color: #999999;}
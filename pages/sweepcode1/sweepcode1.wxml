<view class="bot">
  <view class="botleft">
    <image src="http://47.105.112.194/images/shouye1.png"></image>
    <text>去首页</text>
  </view>



  <view class="botright">
    购买
  </view>

  <view class="botcenter">
    应付：￥0.00
  </view>
</view>
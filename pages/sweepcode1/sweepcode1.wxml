</view>

<view class="spzf">
  <image class="pp" src="http://47.105.112.194/images/zhifubg.png"></image>
  <view wx:if="{{tian==0}}">
    <view class="spleft">
      <image class="leftimg" src="http://47.105.112.194/images/spp.png"></image>
      <text>水票</text>
    </view>
    <view class="spright">
      <label class="fr font checked-lable yes" data-val="1" catchtap='checkedTap1'>
        <radio checked="{{checked1}}" color='#deab8a' />
      </label>
    </view>

    <view class="spcenter">
      <text class="top">抵扣方式</text>
      <text class="shui">还剩6张</text>
    </view>

  </view>
  <view wx:else>
    <view class="dikou">抵扣方式</view>
    <view class="nocon">

      <view class="noconleft">
        <view class="conleft">
          <image src="http://47.105.112.194/images/wx1.png"></image>
          <text>余额</text>
        </view>
        <label class="fr font checked-lable yes" data-val="1" catchtap='checkedTap2'>
          <radio checked="{{checked2}}" color='#deab8a' />
        </label>
      </view>

      <view class="noconright">
        <view class="conleft">
          <image src="http://47.105.112.194/images/qb1.png"></image>
          <text>余额</text>
        </view>
        <label class="fr font checked-lable yes" data-val="1" catchtap='checkedTap3'>
          <radio checked="{{checked3}}" color='#deab8a' />
        </label>
      </view>

    </view>
  </view>
</view>

